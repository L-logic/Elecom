<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.csu.electriccommerce.persistence.GradeMapper">

    <select id="getgrade" parameterType="String" resultType="FLOAT">
    SELECT avg(cpgrade)
    FROM grade
    where compword = #{compword}
    </select>

    <insert id="addGrace" parameterType="String">
        INSERT INTO grade
        (compword,cpgrade)
        VALUES
        (#{compword},#{grade})
    </insert>
</mapper>